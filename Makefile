.PHONY: proto build test lint docker compose-up compose-down loadtest clean

# â”€â”€â”€ Proto Generation â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
proto:
	@echo "ðŸ”§ Generating protobuf code..."
	@bash scripts/gen-proto.sh

# â”€â”€â”€ Build â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
build: proto
	@echo "ðŸ”¨ Building router..."
	go build -o bin/router ./cmd/router/
	@echo "ðŸ”¨ Building worker..."
	go build -o bin/worker ./cmd/worker/
	@echo "âœ… Binaries in ./bin/"

# â”€â”€â”€ Test â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
test:
	@echo "ðŸ§ª Running tests..."
	go test -v -race -count=1 ./...

test-short:
	go test -short -race ./...

# â”€â”€â”€ Lint â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
lint:
	golangci-lint run ./...

# â”€â”€â”€ Docker â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
docker:
	docker build -f deploy/docker/Dockerfile.router -t gpu-router:latest .
	docker build -f deploy/docker/Dockerfile.worker -t gpu-worker:latest .

# â”€â”€â”€ Docker Compose (local dev) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
compose-up:
	docker-compose -f deploy/docker-compose.yaml up --build -d

compose-down:
	docker-compose -f deploy/docker-compose.yaml down

# â”€â”€â”€ Load Test â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
loadtest:
	go run scripts/loadtest.go \
		--addr=localhost:50051 \
		--concurrency=100 \
		--duration=30s

# â”€â”€â”€ K3s Deploy (Colab) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
k3s-deploy:
	kubectl apply -f deploy/k8s/

k3s-status:
	kubectl get pods -o wide
	kubectl get svc

# â”€â”€â”€ Clean â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
clean:
	rm -rf bin/ gen/
