# Build stage
FROM golang:1.24-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o /router ./cmd/router/

# Runtime stage
FROM scratch
COPY --from=builder /router /router
EXPOSE 50051 8080
ENTRYPOINT ["/router"]
