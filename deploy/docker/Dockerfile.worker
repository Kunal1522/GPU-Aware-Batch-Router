# Build stage
FROM golang:1.24-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o /worker ./cmd/worker/

# Runtime stage
FROM scratch
COPY --from=builder /worker /worker
EXPOSE 50052 9090
ENTRYPOINT ["/worker"]
